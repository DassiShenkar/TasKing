<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <RelativeLayout
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_description"
            android:text="@string/task_name"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_category"
            android:textSize="16sp"
            android:layout_below="@id/list_item_description"
            android:text="@string/category"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_dueDate"
        android:textSize="16sp"
        android:text="@string/due_time"
        android:layout_toEndOf="@+id/list_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:textAlignment="textEnd"
        android:layout_alignBottom="@+id/list_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <ImageView
        android:paddingEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trash"
        android:id="@+id/btn_team_delete"
        android:layout_above="@+id/list_item_dueDate"
        android:layout_alignParentEnd="true"
        android:cropToPadding="true"
        android:paddingStart="30dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false" />
    <LinearLayout
        android:text = ""
        android:textSize = "1sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_alignBottom="@+id/list_content" />

</RelativeLayout>