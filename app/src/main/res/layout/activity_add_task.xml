<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tasking.AddTaskActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:text="@string/app_name" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/name_layout"
        android:layout_below="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_name"
            android:id="@+id/txt_task_name"
            android:textSize="22sp"
            android:textColor="@color/grey"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_task_name"
            android:singleLine="true"
            android:lines="1"
            android:textSize="22sp"
            android:inputType="text|none"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:text = ""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/name_layout" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_below="@+id/name_layout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:id="@+id/txt_category"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/grey"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_category"
            android:singleLine="true"
            android:lines="1"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:inputType="none"
            android:layout_alignTop="@+id/txt_category"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:text = ""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/category_layout" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/priority_layout"
        android:layout_below="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priority"
            android:id="@+id/txt_priority"
            android:textSize="22sp"
            android:textColor="@color/grey"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <RadioGroup
            android:id="@+id/radGrp_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true">

            <RadioButton android:id="@+id/radio_low"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="@string/low" />

            <RadioButton android:id="@+id/radio_normal"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="@string/normal"
                android:checked="true"/>

            <RadioButton android:id="@+id/radio_urgent"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="@string/urgent" />

        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:text = ""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/priority_layout" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/location_layout"
        android:layout_below="@id/priority_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:id="@+id/txt_location"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/grey" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_location"
            android:singleLine="true"
            android:lines="1"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:inputType="none"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:text = ""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/location_layout" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/date_layout"
        android:layout_below="@id/location_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:id="@+id/txt_date"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/grey"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edit_date"
            android:singleLine="true"
            android:lines="1"
            android:textSize="22sp"
            android:inputType="date"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/datePicker"
            android:layout_centerVertical="true" />

        <ImageButton
            android:onClick="showDatePickerDialog"
            android:id="@+id/datePicker"
            android:src="@drawable/calander"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:cropToPadding="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:text = ""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/date_layout" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/time_layout"
        android:layout_below="@id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:id="@+id/txt_time"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/grey"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edit_time"
            android:singleLine="true"
            android:lines="1"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:inputType="time"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/time_picker" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock"
            android:onClick="showTimePickerDialog"
            android:id="@+id/time_picker"
            android:background="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:text = ""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/time_layout" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/assign_layout"
        android:layout_below="@id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assign_member"
            android:id="@+id/txt_assign_member"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/grey"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spn_add_member"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/txt_assign_member"
            android:layout_centerVertical="true" />


    </RelativeLayout>

    <LinearLayout
        android:text = ""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/assign_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/txt_add_task"
        android:textSize="18sp"
        android:textColor="@color/darkBlue"
        android:onClick="done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/txt_cancel_add_task"
        android:textSize="18sp"
        android:textColor="@color/darkBlue"
        android:onClick="cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp" />

</RelativeLayout>
